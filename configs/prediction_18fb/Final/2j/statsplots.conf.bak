DEFAULT::file_5_path=/nfs-7/userdata/bobak/ZMET2016_Hists_NovemberClean/prediction_18fb/FS/2j/FS.root
DEFAULT::file_4_path=/nfs-7/userdata/bobak/ZMET2016_Hists_NovemberClean/prediction_18fb/ZNu/2j/ttz.root
DEFAULT::file_3_path=/nfs-7/userdata/bobak/ZMET2016_Hists_NovemberClean/prediction_18fb/ZNu/2j/VVV.root
DEFAULT::file_2_path=/nfs-7/userdata/bobak/ZMET2016_Hists_NovemberClean/prediction_18fb/ZNu/2j/wz.root
DEFAULT::file_1_path=/nfs-7/userdata/bobak/ZMET2016_Hists_NovemberClean/prediction_18fb/ZNu/2j/zz.root


#Add RSFOF
DEFAULT::hist_4_scale=1.09 #ttz
DEFAULT::hist_2_scale=0.94 #wz
DEFAULT::hist_1_scale=1.8  #zz
DEFAULT::hist_5_scale=0.073905 #RSFOF * Kappa

